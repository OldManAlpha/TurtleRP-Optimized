<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

  <!-- Spellbook bottom tab button template -->
  <Button name="TurtleRP_DescriptionFrameTabButtonTemplate" virtual="true">
    <Size>
      <AbsDimension x="128" y="64"/>
    </Size>
    <HitRectInsets>
      <AbsInset left="15" right="14" top="13" bottom="15"/>
    </HitRectInsets>
    <Scripts>
      <OnClick>
        TurtleRP.OnBottomTabClick(this.bookType)
      </OnClick>
    </Scripts>
    <NormalText inherits="GameFontNormalSmall">
      <Anchors>
        <Anchor point="CENTER">
          <Offset>
            <AbsDimension x="0" y="3"/>
          </Offset>
        </Anchor>
      </Anchors>
    </NormalText>
    <HighlightText inherits="GameFontHighlightSmall">
      <Anchors>
        <Anchor point="CENTER">
          <Offset>
            <AbsDimension x="0" y="3"/>
          </Offset>
        </Anchor>
      </Anchors>
    </HighlightText>
    <DisabledText inherits="GameFontHighlightSmall">
      <Anchors>
        <Anchor point="CENTER">
          <Offset>
            <AbsDimension x="0" y="6"/>
          </Offset>
        </Anchor>
      </Anchors>
    </DisabledText>
    <NormalTexture file="Interface\SpellBook\UI-SpellBook-Tab-Unselected"/>
    <!-- <HighlightTexture file="Interface\SpellBook\UI-SpellbookPanel-Tab-Highlight"/> -->
  </Button>

  <Frame name="TurtleRP_CharacterDetails" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true">
    <Size>
      <AbsDimension x="384" y="512"/>
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="-104"/>
        </Offset>
      </Anchor>
    </Anchors>
    <HitRectInsets>
      <AbsInset left="0" right="30" top="0" bottom="45"/>
    </HitRectInsets>
    <Layers>
      <Layer level="ARTWORK">
        <Texture name="$parent_TopLeft" file="Interface\Addons\TurtleRP\images\description\TTRP-Description-TopLeft">
          <Size>
            <AbsDimension x="256" y="256"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <Texture name="$parent_TopRight" file="Interface\QuestFrame\UI-QuestGreeting-TopRight">
          <Size>
            <AbsDimension x="128" y="256"/>
          </Size>
          <Anchors>
            <Anchor point="TOPRIGHT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <Texture name="$parent_BottomLeft" file="Interface\Addons\TurtleRP\images\description\TTRP-Description-BotLeft">
          <Size>
            <AbsDimension x="256" y="256"/>
          </Size>
          <Anchors>
            <Anchor point="BOTTOMLEFT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <Texture name="$parent_BottomRight" file="Interface\Addons\TurtleRP\images\description\TTRP-Description-BotRight">
          <Size>
            <AbsDimension x="128" y="256"/>
          </Size>
          <Anchors>
            <Anchor point="BOTTOMRIGHT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <FontString name="$parent_TargetName" inherits="GameFontHighlightLarge">
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="65" y="-52"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <Texture name="$parent_Icon" file="Interface\Icons\Ability_Druid_TravelForm">
          <Size>
            <AbsDimension x="30" y="30"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="30" y="-45"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
        <Anchors>
          <Anchor point="TOPRIGHT">
            <Offset>
              <AbsDimension x="-27" y="-14"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

      <!-- Description frame scrolling -->
      <ScrollFrame name="$parent_DescriptionScrollBox" enableMouse="true" inherits="UIPanelScrollFrameTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
            <Offset>
              <AbsDimension x="20" y="-79" />
            </Offset>
          </Anchor>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-62" y="75" />
            </Offset>
          </Anchor>
        </Anchors>
        <ScrollChild>
          <Frame name="$parent_DescriptionHolder">
            <Size>
              <AbsDimension x="280" y="50" />
            </Size>
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                <Offset>
                  <AbsDimension x="0" y="-30" />
                </Offset>
              </Anchor>
            </Anchors>
            <Frames>
              <SimpleHTML name="$parent_DescriptionHTML">
                <Size>
                  <AbsDimension x="280" y="150" />
                </Size>
                <Anchors>
                  <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                    <Offset>
                      <AbsDimension x="10" y="-10" />
                    </Offset>
                  </Anchor>
                </Anchors>
                <FontStringHeader1 inherits="GameFontHighlightLarge" />
                <FontStringHeader2 inherits="NumberFontNormalLarge" />
                <FontStringHeader3 inherits="QuestTitleFont">
                  <Color r="1" g="1" b="1"/>
                </FontStringHeader3>
                <FontString inherits="GameFontNormal" justifyV="TOP" justifyH="LEFT">
                  <Color r="1" g="1" b="1" />
                </FontString>
                <Layers>
            			<Layer level="OVERLAY">
                    <FontString name="$parent_TargetDescription" inherits="OVERLAY" font="Fonts\FRIZQT__.ttf" justifyH="LEFT" justifyV="TOP" text="|cFFFF0000Hiiii|r  |TInterface\TargetingFrame\TargetDead|t">
                      <Size>
                        <AbsDimension x="280" />
                      </Size>
                      <Anchors>
                        <Anchor point="TOPLEFT">
                          <Offset>
                            <AbsDimension x="0" y="-10" />
                          </Offset>
                        </Anchor>
                        <Anchor point="BOTTOMRIGHT">
                          <Offset>
                            <AbsDimension x="0" y="0" />
                          </Offset>
                        </Anchor>
                      </Anchors>
                      <FontHeight>
                        <AbsValue val="12" />
                      </FontHeight>
                      <Color r="0" g="0" b="0" />
                    </FontString>
                  </Layer>
                </Layers>
              </SimpleHTML>
            </Frames>
          </Frame>
        </ScrollChild>
      </ScrollFrame>
      <Button name="$parent_DescriptionFrameTabButton1" inherits="TurtleRP_DescriptionFrameTabButtonTemplate" text="Profile">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="10" y="90"/>
            </Offset>
          </Anchor>
        </Anchors>
        <DisabledTexture file="Interface\SpellBook\UI-SpellBook-Tab1-Selected"/>
      </Button>
      <Button name="$parent_DescriptionFrameTabButton2" inherits="TurtleRP_DescriptionFrameTabButtonTemplate" text="Description">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_DescriptionFrameTabButton1" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="-20" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <DisabledTexture file="Interface\SpellBook\UI-SpellBook-Tab1-Selected"/>
      </Button>
      <Button name="$parent_DescriptionFrameTabButton3" inherits="TurtleRP_DescriptionFrameTabButtonTemplate" text="Notes">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_DescriptionFrameTabButton2" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="-20" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <DisabledTexture file="Interface\SpellBook\UI-SpellBook-Tab1-Selected"/>
      </Button>
    </Frames>
    <Scripts>
      <OnMouseDown>
        this:StartMoving()
      </OnMouseDown>
      <OnMouseUp>
        this:StopMovingOrSizing()
      </OnMouseUp>
    </Scripts>
  </Frame>
</Ui>
