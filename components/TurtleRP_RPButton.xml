<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<Button name="TurtleRP_RPModeButton" inherits="UIPanelButtonGrayTemplate" movable="true" parent="ChatFrame1" text="RP">
		<Size>
			<AbsDimension x="25" y="25"/>
		</Size>
		<Anchors>
			<Anchor point="TOP" relativeTo="$parentBottomButton" relativePoint="BOTTOM">
				<Offset>
					<AbsDimension x="0" y="2"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
      <OnLoad>
        TurtleRP_RPModeButton:SetFont("Fonts\\FRIZQT__.ttf", 10)
      </OnLoad>
			<OnClick>
				TurtleRP.ToggleRPMode();
			</OnClick>
			<OnDragStart>
				this:StartMoving();
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
		<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
	</Button>

</Ui>
